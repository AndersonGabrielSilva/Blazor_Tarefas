
@* Aponta para o Assembly da Aplicação, depois ele irá varrer todas as classes da aplicação
    e verificar se existe alguma classe decorada com o (RouteAttribute / @Page) *@
<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">

    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
    </Found>

    @* Aqui colocamos uma pagina HTML para quando a pagina não é encontrada *@
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
            <p>NÃO EXISTE .</p>
        </LayoutView>
    </NotFound>
</Router>
